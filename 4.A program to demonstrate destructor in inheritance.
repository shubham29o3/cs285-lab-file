#include <iostream>
using namespace std;
class base
{
public:
    base()
    {
        cout << "This is Base class constructor" << endl;
    }
    ~base()
    {
        cout << "THis is Base class destructor" << endl;
    }
};
class derived : public base
{
public:
    derived()
    {
        cout << "This is Derived class constructor" << endl;
    }
    ~derived()
    {
        cout << "This is derived class destructor" << endl;
    }
};
int main()
{
    derived d;
    return 0;
}
